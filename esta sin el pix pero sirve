    <script>
        // Product selection functionality - Both start gray, selected turns pink
        function selectProductOption(type) {
            // Hide error message
            document.getElementById('product-error').style.display = 'none';
            
            // Reset both buttons to gray
            const individualBtn = document.getElementById('product-individual');
            const packBtn = document.getElementById('product-pack');
            
            // Both buttons gray by default
            individualBtn.style.border = '3px solid transparent';
            individualBtn.style.transform = 'scale(1)';
            individualBtn.style.background = 'linear-gradient(135deg, #e8e8e8, #f5f5f5)';
            
            packBtn.style.border = '3px solid transparent';
            packBtn.style.transform = 'scale(1)';
            packBtn.style.background = 'linear-gradient(135deg, #e8e8e8, #f5f5f5)';
            
            // Set selected product and change to pink
            const hiddenInput = document.getElementById('selectedProduct');
            
            if (type === 'individual') {
                individualBtn.style.border = '3px solid #ff6b9d';
                individualBtn.style.transform = 'scale(1.05)';
                individualBtn.style.background = 'linear-gradient(135deg, #ffb3d1, #ffc1e0)';
                hiddenInput.value = 'Carotone Individual - $119.900';
            } else if (type === 'pack') {
                packBtn.style.border = '3px solid #ff6b9d';
                packBtn.style.transform = 'scale(1.05)';
                packBtn.style.background = 'linear-gradient(135deg, #ffb3d1, #ffc1e0)';
                hiddenInput.value = 'Pack Transformación 2x1 - $179.800';
            }
            
            console.log('Producto seleccionado:', hiddenInput.value);
        }

        // FAQ Toggle Functionality
        function toggleFaq(item) {
            // Close other open items
            document.querySelectorAll('.faq-item').forEach(faq => {
                if (faq !== item) {
                    faq.classList.remove('active');
                }
            });
            
            // Toggle current item
            item.classList.toggle('active');
        }
        function selectProduct(type, price) {
            // Auto-select product when coming from CTA buttons
            selectProductOption(type);
            
            // Smooth scroll to form
            document.getElementById('order').scrollIntoView({
                behavior: 'smooth'
            });
        }

        // Form submission with EmailJS - Enhanced
        document.getElementById('orderForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Validate product selection first
            const selectedProduct = document.getElementById('selectedProduct').value;
            if (!selectedProduct) {
                document.getElementById('product-error').style.display = 'block';
                document.getElementById('order').scrollIntoView({ behavior: 'smooth' });
                return;
            }
            
            // Hide any previous error
            document.getElementById('product-error').style.display = 'none';
            
            // Get all form data
            const formData = new FormData(this);
            
            // Create data object with all required fields
            const templateParams = {
                from_name: formData.get('from_name') || '',
                from_phone: formData.get('from_phone') || '',
                from_email: formData.get('from_email') || '',
                from_address: formData.get('from_address') || '',
                from_city: formData.get('from_city') || '',
                selected_product: selectedProduct,
                message: formData.get('message') || 'Sin comentarios adicionales',
                order_timestamp: new Date().toLocaleString('es-CO', {
                    year: 'numeric',
                    month: '2-digit',
                    day: '2-digit',
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit'
                })
            };
            
            // Add product price
            if (selectedProduct.includes('179.800')) {
                templateParams.product_price = '$179.800';
            } else {
                templateParams.product_price = '$119.900';
            }
            
            console.log('Datos a enviar:', templateParams);
            
            // UI feedback
            const submitButton = document.querySelector('.submit-button');
            const originalText = submitButton.textContent;
            
            submitButton.textContent = '⏳ Enviando pedido...';
            submitButton.disabled = true;
            submitButton.style.opacity = '0.7';
            
            // Send email via EmailJS
            emailjs.send('service_4gf3fhm', 'template_cj3rb8d', templateParams)
            .then(function(response) {
                console.log('✅ Email enviado exitosamente!', response.status, response.text);
                
                // Success message
                alert('🎉 ¡Pedido enviado exitosamente!\n\nTe contactaremos por WhatsApp en los próximos minutos para confirmar tu orden.\n\n¡Gracias por elegir Carotone!');
                
                // Reset form completely
                document.getElementById('orderForm').reset();
                document.getElementById('selectedProduct').value = '';
                
                // Reset product selection visual - both gray
                const individualBtn = document.getElementById('product-individual');
                const packBtn = document.getElementById('product-pack');
                
                individualBtn.style.border = '3px solid transparent';
                individualBtn.style.transform = 'scale(1)';
                individualBtn.style.background = 'linear-gradient(135deg, #e8e8e8, #f5f5f5)';
                
                packBtn.style.border = '3px solid transparent';
                packBtn.style.transform = 'scale(1)';
                packBtn.style.background = 'linear-gradient(135deg, #e8e8e8, #f5f5f5)';
                
                // Reset button
                submitButton.textContent = originalText;
                submitButton.disabled = false;
                submitButton.style.opacity = '1';
                
            })
            .catch(function(error) {
                console.error('❌ Error al enviar email:', error);
                
                // Error message with fallback
                alert('⚠️ Hubo un problema al enviar tu pedido.\n\nPor favor:\n1. Verifica tu conexión a internet\n2. Intenta nuevamente\n3. O contáctanos directamente por WhatsApp\n\nError técnico: ' + (error.text || error.message || 'Error desconocido'));
                
                // Reset button
                submitButton.textContent = originalText;
                submitButton.disabled = false;
                submitButton.style.opacity = '1';
            });
        });

        // Smooth scrolling for CTA buttons
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        // Add animation on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('fade-in-up');
                }
            });
        }, observerOptions);

        // Observe all sections
        document.querySelectorAll('section').forEach(section => {
            observer.observe(section);
        });
    </script>
